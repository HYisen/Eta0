<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="800.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.112" fx:controller="net.alexhyisen.eta.gui.PageController">
   <top>
      <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="codeLabel" alignment="CENTER" prefWidth="100.0" text="CODE" />
            <Label fx:id="bookLabel" alignment="CENTER" prefWidth="140.0" text="BOOK" />
            <Label fx:id="chapterLabel" alignment="CENTER" prefWidth="180.0" text="CHAPTER" />
            <Spinner fx:id="fontSpinner" prefWidth="60.0" />
            <Button fx:id="nextButton" mnemonicParsing="false" onAction="#handleNextButtonAction" prefWidth="50.0" text="Next" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <TextArea fx:id="dataTextArea" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </TextArea>
   </center>
</BorderPane>

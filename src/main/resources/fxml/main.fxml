<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.alexhyisen.eta.view.Controller">
    <bottom>
        <Label id="msgLabel" fx:id="msgLabel" text="info" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin></Label>
    </bottom>
    <center>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="Source">
                    <content>
                  <BorderPane>
                     <top>
                                <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
                                    <children>
                                        <Label text="path" />
                                        <TextField id="configPathTextField" fx:id="sourcePathTextField" prefColumnCount="40" promptText="input the path of source file there" />
                                        <Label id="configNameLabel" text="name" />
                                        <TextField id="configNameTextField" fx:id="sourceNameTextField" prefColumnCount="15" promptText="input source filename" />
                                        <Button id="sourceLoadButton" mnemonicParsing="false" onAction="#handleLoadSourceButtonAction" text="Load" />
                                        <Button id="sourceSaveButton" mnemonicParsing="false" onAction="#handleSaveSourceButtonAction" text="Save" />
                                    </children>
                           <BorderPane.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </BorderPane.margin>
                                </HBox>
                     </top>
                     <bottom>
                        <HBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Button id="appendSourceButton" fx:id="appendSourceButton" mnemonicParsing="false" onAction="#handleAppendSourceButtonAction" text="Append" />
                              <Button id="deleteSourceButton" fx:id="deleteSourceButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleDeleteSourceButtonAction" text="Delete" />
                           </children>
                           <BorderPane.margin>
                              <Insets top="10.0" />
                           </BorderPane.margin>
                        </HBox>
                     </bottom>
                     <center>
                                <TableView fx:id="sourceTableView" BorderPane.alignment="CENTER" />
                     </center>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </BorderPane>
                    </content></Tab>
                <Tab text="Config">
                    <content>
                  <BorderPane>
                     <top>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
                           <children>
                               <Label text="path" />
                               <TextField id="configPathTextField" fx:id="configPathTextField" prefColumnCount="40" promptText="input the path of config file there" />
                               <Label id="configNameLabel" text="name" />
                               <TextField id="configNameTextField" fx:id="configNameTextField" prefColumnCount="15" promptText="input config filename" />
                               <Button id="configLoadButton" mnemonicParsing="false" onAction="#handleLoadConfigButtonAction" text="Load" />
                               <Button id="configSaveButton" mnemonicParsing="false" onAction="#handleSaveConfigButtonAction" text="Save" />
                           </children>
                           <BorderPane.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </BorderPane.margin>
                        </HBox>
                     </top>
                     <center>
                         <TableView fx:id="configTableView" prefHeight="500.0" BorderPane.alignment="CENTER">
                           <BorderPane.margin>
                              <Insets />
                           </BorderPane.margin>
                        </TableView>
                     </center>
                     <opaqueInsets>
                        <Insets right="10.0" />
                     </opaqueInsets>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </BorderPane>
                    </content></Tab>
                <Tab text="Desktop">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
                <Tab text="Untitled Tab 2">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
